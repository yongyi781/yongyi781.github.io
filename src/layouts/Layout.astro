---
import BaseHead from "../components/BaseHead.astro"
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts"

export interface Props {
  title?: string
  description?: string
  limitWidth?: boolean
  useKatex?: boolean
}
const { title = SITE_TITLE, description = SITE_DESCRIPTION, limitWidth = true, useKatex = false } = Astro.props
---

<html lang="en">
  <head>
    <BaseHead {title} {description} {useKatex} />
  </head>
  <body class="min-h-screen flex flex-col bg-linear-to-t from-slate-100 via-slate-50 to-slate-100">
    <Header />
    <main class=`p-10 my-auto ${limitWidth ? "mx-auto max-w-4xl" : ""}`>
      <slot />
    </main>
    <Footer />
  </body>
</html>
